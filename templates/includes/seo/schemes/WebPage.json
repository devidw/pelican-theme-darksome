"@type": "WebPage",

{% if pa.title %}
"name": "{{ pa.title }}",
{% endif %}

{% if pa.description %}
"description": "{{ pa.description }}",
{% endif %}

{% if CANONICALURLS %}
"sameAs": [
  {% for url in CANONICALURLS %}
    "{{ url }}"
    {{ ', ' if not loop.last else '' }}
  {% endfor %}
],
{% endif %}

{# fixed property without tailing comma to keep json valid #}
"url": "{{ SITEURL }}/{{ pa.url }}"
